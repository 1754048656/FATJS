<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.linsheng.FATJS.script.JsTaskDemo">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp"
        android:stretchColumns="0.5">

        <TableRow>

            <TextView
                android:layout_width="60dp"
                android:layout_height="50dp"
                android:layout_span="1"
                android:gravity="center"
                android:text=""
                android:textStyle="bold" />
            <TextView
                android:layout_width="78dp"
                android:layout_height="10dp"
                android:layout_span="1"
                android:gravity="center"
                android:text=""
                android:textStyle="bold" />
            <TextView
                android:layout_width="40dp"
                android:layout_height="10dp"
                android:layout_span="1"
                android:gravity="center"
                android:text=""
                android:textStyle="bold" />
            <TextView
                android:layout_width="80dp"
                android:layout_height="10dp"
                android:layout_span="1"
                android:gravity="center"
                android:text=""
                android:textStyle="bold" />

        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="运行数量(uid)：" />

            <EditText
                android:id="@+id/run_num_in"
                android:layout_width="171dp"
                android:layout_height="wrap_content"
                android:layout_span="2"
                android:hint=""
                android:inputType="number"
                android:text="80" />
        </TableRow>

        <TableRow>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="uid文件路径：" />

            <EditText
                android:id="@+id/uid_file_in"
                android:layout_width="141dp"
                android:layout_height="wrap_content"
                android:hint=""
                android:layout_span="2"
                android:text="/sdcard/uid.txt"
                android:inputType="text"/>

        </TableRow>

<!--        <TableRow>-->
<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="查看主页(%)：" />-->
<!--            <EditText-->
<!--                android:id="@+id/chakan_in"-->
<!--                android:layout_width="141dp"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:hint=""-->
<!--                android:layout_span="2"-->
<!--                android:text="30"-->
<!--                android:inputType="number"/>-->
<!--        </TableRow>-->

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="主页停顿(秒)：" />

            <EditText
                android:id="@+id/index_0_in"
                android:layout_width="69dp"
                android:layout_height="wrap_content"
                android:layout_span="1"
                android:hint=""
                android:inputType="number"
                android:text="6" />

            <TextView
                android:layout_width="27dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="至" />

            <EditText
                android:id="@+id/index_1_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="number"
                android:text="10"
                android:layout_span="1"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视频停顿(秒)：" />

            <EditText
                android:id="@+id/view_0_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="number"
                android:text="8"
                android:layout_span="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="至" />

            <EditText
                android:id="@+id/view_1_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="number"
                android:text="18"
                android:layout_span="1"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="跳转间隔(秒)：" />

            <EditText
                android:id="@+id/jump_0_in"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="number"
                android:text="12"
                android:layout_span="1"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="至" />

            <EditText
                android:id="@+id/jump_1_in"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=""
                android:inputType="number"
                android:text="18"
                android:layout_span="1"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="选择性别：" />

            <CheckBox
                android:id="@+id/gender_m_in"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_span="1"
                android:text="男" />

            <CheckBox
                android:id="@+id/gender_w_in"
                android:layout_width="79dp"
                android:layout_height="40dp"
                android:layout_span="1"
                android:text="女" />

            <CheckBox
                android:id="@+id/gender_no_in"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:layout_span="1"
                android:text="未知"/>
        </TableRow>

        <TableRow>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                android:text="" />

        </TableRow>

        <TableRow
            android:gravity="center">
            <Button
                android:id="@+id/start_run_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_span="3"
                android:text="开始执行" />
        </TableRow>
    </TableLayout>
</RelativeLayout>