<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AboutTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppThemeLight" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:editTextColor">#000</item>
        <item name="android:textColor">#000</item>
        <item name="android:tint">#000</item>
        <item name="android:background">#00FFFFFF</item>
    </style>

    <style name="AppThemeDark" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="android:editTextColor">#FFF</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:tint">#FFF</item>
    </style>

    <style name="AlertThemeDark" parent="Theme.MaterialComponents.DayNight">
        <item name="android:textColor">#FFF</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:background">#000</item>
    </style>

    <style name="AlertThemeLight" parent="Theme.MaterialComponents.Light">
        <item name="android:textColor">#000</item>
        <item name="android:background">#FFF</item>
        <item name="android:layout_margin">1dp</item>
    </style>

    <style name="InsertBtnStyle" parent="android:Widget.TextView">
        <item name="android:background">@color/lines_bg</item>
    </style>

</resources>
